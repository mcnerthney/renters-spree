<!DOCTYPE HTML>
<html>
  <head data-hook="inside_head">
    <%= render 'shared/head' %>
  </head>
  <body class="<%= body_class %>" id="<%= @body_id || 'default' %>" data-hook="body">
    <div id="header" data-hook>
      <ul id="nav-bar" data-hook>
        <%= render 'shared/nav_bar' %>
      </ul>
      <div id="logo" data-hook>
        <%= logo('logo.png') %>
      </div>
    </div>

    <div id="wrapper" data-hook>
      <% if content_for?(:sidebar) %>
        <div id="sidebar" data-hook>
          <%= yield :sidebar %>
        </div>
      <% end %>

      <div id="content" data-hook>
        <%= breadcrumbs(@taxon) %>
        <%= flash_messages %>
        <%= yield %>
      </div>
    </div>

 	<div id="footer" class="cantainer">
	<div align="center">
		<nav class="round">
			<ul>
				<li> <%= link_to "", '#'  %></li>
				<li> <%= link_to "", '#' %></li>	
	         </ul>
	</nav>

	<script type="text/javascript">

	  var _gaq = _gaq || [];
	  _gaq.push(['_setAccount', 'UA-26352425-1']);
	  _gaq.push(['_trackPageview']);

	  (function() {
	    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	  })();

	</script>
  </body>
	<%= request.user_agent  if Rails.env.development? %> 
	<%= debug(params) if Rails.env.development? %>

</html>
